<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.title %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div>
  <%= form_for [@post, @post.comments.new] do |form| %>
    <form>
      <%= form.text_area :body %>

    <div class="actions">
      <%= form.submit %>
    </div>
    </form>

    <% end %>
</div>
